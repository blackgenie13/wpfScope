<Window x:Class="wpfScope.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="358">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button Name="OpenDimensionsButton" Click="OpenDimensionsButton_Click" Content="Open Dimensions Overlay" Margin="12,12,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" />
        <Button Grid.Column="1" Name="CloseDimensionsButton" Click="CloseDimensionsButton_Click" Content="X" IsEnabled="False" Margin="12,12,12,0" HorizontalAlignment="Right" VerticalAlignment="Top" />
    </Grid>
</Window>
