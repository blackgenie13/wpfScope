<Window x:Class="wpfScope.DimensionsOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DimensionsOverlay" Height="480" Width="640" Background="#00000000"
        AllowsTransparency="True" ResizeMode="CanResizeWithGrip" Topmost="True" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle x:Name="TitleBar" Grid.Row="0" Fill="Gray" Height="23" />
        <TextBlock x:Name="TitleTextBlock" Grid.Row="0" Foreground="White" IsHitTestVisible="False" Margin="5, 0" Text="Dimensions Overlay" VerticalAlignment="Center" />
        <Button x:Name="CloseButton" Grid.Row="0" HorizontalAlignment="Right" Margin="5, 0" VerticalAlignment="Center">
            <Button.Template>
                <ControlTemplate>
                    <Grid Background="Gray">
                        <Border BorderBrush="White" BorderThickness="1" Padding="3">
                            <Canvas Height="7" Width="7">
                                <Line X1="0" Y1="0" X2="7" Y2="7" Stroke="White" StrokeThickness="2" />
                                <Line X1="7" Y1="0" X2="0" Y2="7" Stroke="White" StrokeThickness="2" />
                            </Canvas>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" />
        <Canvas Grid.Row="1" Height="16" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="16">
            <Polygon IsHitTestVisible="False" Points="16,0 16,16 0,16" Fill="Gray" />
            <Line IsHitTestVisible="False" X1="6" Y1="14" X2="14" Y2="6" Stroke="White" StrokeThickness="1" />
            <Line IsHitTestVisible="False" X1="9" Y1="14" X2="14" Y2="9" Stroke="White" StrokeThickness="1" />
            <Line IsHitTestVisible="False" X1="12" Y1="14" X2="14" Y2="12" Stroke="White" StrokeThickness="1" />
        </Canvas>
    </Grid>
</Window>
