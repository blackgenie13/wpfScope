<Window x:Class="wpfScope.DimensionsOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DimensionsOverlay" Height="400" Width="400" Background="#00000000"
        AllowsTransparency="True" Topmost="True" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Canvas IsHitTestVisible="False">
            <Line X1="10" Y1="10" X2="50" Y2="50" Stroke="Red" StrokeThickness="1" />
            <Line X1="10" Y1="20" X2="50" Y2="60" Stroke="Red" StrokeThickness="1" />
            <Rectangle IsHitTestVisible="False" Fill="Yellow" Height="20" Width="100" />
        </Canvas>
    </Grid>
</Window>
